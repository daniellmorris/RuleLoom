{
  "name": "rule-loom-core",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.js"
    },
    "./inputs": {
      "types": "./src/inputs/index.ts",
      "import": "./dist/inputs/index.js"
    },
    "./inputs/*": {
      "types": "./src/inputs/*.ts",
      "import": "./dist/inputs/*.js"
    },
    "./package.json": "./package.json",
    "./ruleloom.manifest.yaml": "./ruleloom.manifest.yaml"
  },
  "files": [
    "dist",
    "ruleloom.manifest.yaml"
  ],
  "scripts": {
    "build": "tsc -b tsconfig.json",
    "manifest": "npm -w rule-loom-runner run build --if-present && node ../../packages/rule-loom-runner/dist/cli.js manifest .",
    "postbuild": "npm run manifest"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "rule-loom-engine": "^0.1.0",
    "rule-loom-lib": "^0.1.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.202",
    "typescript": "^5.4.2",
    "zod-to-json-schema": "^3.23.1",
    "js-yaml": "^4.1.0"
  }
}
