{
  "name": "rule-loom-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspace rule-loom-runner",
    "start": "npm run start --workspace rule-loom-runner",
    "test": "ts-node --project tsconfig.test.json tests/engine.spec.ts",
    "test:integration": "vitest run --config vitest.config.ts"
  },
  "devDependencies": {
    "@types/supertest": "^2.0.16",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "vitest": "^2.0.5"
  }
}
