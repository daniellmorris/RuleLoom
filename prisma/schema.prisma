generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("RULE_LOOM_DATABASE_URL")
}

model RunnerConfig {
  id            String   @id
  basePath      String
  configPath    String?  @unique
  configContent String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([basePath])
}
